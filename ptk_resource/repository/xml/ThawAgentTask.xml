<Pattern name="ThawAgentTask">	<Information>		<Author>Danilo Candela</Author>		<Version>0.1</Version>		<Description>This pattern can be used to add an agent the ability to thaw a previous freezed snapshot of itself</Description>	</Information>	<Task name="ThawAgentTask">		<ExtendsTaskShell>OneShotBehaviour</ExtendsTaskShell>		<TaskConstructor name="ThawAgentTask">			<Code>constructor@Task</Code>		</TaskConstructor>				<TaskSetup/>		<Method name="action" type="void">			<Code>action@ThawAgentTask</Code>		</Method>		<Method name="getRequest" type="ACLMessage">			<Code>getRequest@AMSClientBehaviour</Code>		</Method>	</Task>	<Task name="MyAMSClientBehaviour" extends ="AMSClientBehaviour"/></Pattern>