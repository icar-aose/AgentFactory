<Pattern name="GenericAgent">	<Information>		<Author>Luca Sabatucci</Author>		<Version>1.0</Version>		<Description>This pattern give to an agent the ability to register itself to a specific platform</Description>	</Information>	<Agent name="GenericAgent">		<Attribute type="String" name="AGENT_NAME">			<Visibility>private</Visibility>			<Modifier>static</Modifier>			<Modifier>final</Modifier>			<Value>"HERE_specify_the_agent_name"</Value>		</Attribute>		<AgentConstructor name="GenericAgent">			<Code>constructor@GenericAgent</Code>		</AgentConstructor>		<AgentSetup>			<Code>AgentSetup@GenericAgent</Code>		</AgentSetup>		<Method name="register_to_df" type="void">			<Code>register_to_df@GenericAgent</Code>		</Method>	</Agent>	<PlatformConstraint platform="FIPAOS" target="GenericAgent">		<Method name="register_to_ams" type="void">			<Code>register_to_ams@GenericAgent</Code>		</Method>		<Method name="shutdown" type="void">			<Code>shutdown@GenericAgent</Code>		</Method>		<Task name="IdleTask">			<ExtendsTaskShell/>			<TaskConstructor name="IdleTask">				<Visibility>public</Visibility>			</TaskConstructor>			<TaskSetup>				<Code>setup.IdleTask@GenericAgent</Code>			</TaskSetup>		</Task>	</PlatformConstraint>	<PlatformConstraint platform="ALL" target="model">		<Relation label="GenericAgent0001" start="GenericAgent.GenericAgent" end="GenericAgent.setup"/>		<Relation label="GenericAgent0004" start="GenericAgent.setup" end="GenericAgent.register_to_df"/>	</PlatformConstraint>	<PlatformConstraint platform="FIPAOS" target="model">		<Relation label="GenericAgent0002" start="GenericAgent.setup" end="GenericAgent.IdleTask.IdleTask"/>		<Relation label="GenericAgent0003" start="GenericAgent.IdleTask.IdleTask" end="GenericAgent.IdleTask.startTask"/>	</PlatformConstraint></Pattern>