<Pattern name="Explorer">	<Agent name="Base">		<Description>This agent creates the Explorer agent and send it the coordinates to reach.</Description>		<ExtendsAgentShell/>		<AgentSetup>			<Code>setup@Base</Code>		</AgentSetup>		<Task name="ExplorerEngager" >			<ExtendsTaskShell/>			<Attribute name="destination" type="String"/>			<TaskConstructor name="Constructor_0">				<Code>constructor.ExporerEngager@Base</Code>			</TaskConstructor>			<TaskSetup>				<Code>setup.ExporerEngager@Base</Code>			</TaskSetup>		</Task>	</Agent>	<Agent name="Explorer">		<Description>This agent is created to explore a remote context. It mantains a reference to its creator to eventually extabilish a conversation.</Description>		<ExtendsAgentShell/>		<AgentId name="parent"/>		<AgentSetup>			<Code>setup@Explorer</Code>		</AgentSetup>		<Task name="TeleportBehaviour">			<ExtendsTaskShell/>			<Attribute name="destination" type="String"/>			<TaskConstructor name="Constructor_0">				<Code>Constructor.Teleport@Explorer</Code>			</TaskConstructor>			<TaskSetup>				<Code>Setup.Teleport@Explorer</Code>			</TaskSetup>		</Task>	</Agent></Pattern>