<Pattern name="SaveAgentTask">	<Information>		<Author>Danilo Candela</Author>		<Version>0.1</Version>		<Description>This pattern can be used to add an agent the ability to save itself</Description>	</Information>	<Task name="SaveAgentTask">		<ExtendsTaskShell>OneShotBehaviour</ExtendsTaskShell>		<TaskConstructor name="SaveAgentTask">			<Code>constructor@Task</Code>		</TaskConstructor>				<TaskSetup/>		<Method name="action" type="void">			<Code>action@SaveAgentTask</Code>		</Method>	</Task></Pattern>