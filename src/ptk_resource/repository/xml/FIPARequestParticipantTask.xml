<Pattern name="FIPARequestParticipantTask">	<Information>		<Author>Luca Sabatucci</Author>		<Version>0.9</Version>		<Description>This pattern can be used to add an agent the ability to participate a FIPA Request communication.</Description>	</Information>	<Task name="FIPARequestParticipantTask">		<TaskConstructor name="FIPARequestParticipantTask">			<Code>constructor@FIPARequestParticipantTask</Code>		</TaskConstructor>		<Method name="sendAgree" type="void">			<HandleArgoment name="msg"/>			<Code>sendAgree@FIPARequestParticipantTask</Code>		</Method>		<Method name="sendNotUnderstood" type="void">			<HandleArgoment name="msg"/>			<Code>sendNotUnderstood@FIPARequestParticipantTask</Code>		</Method>		<Method name="sendRefuse" type="void">			<HandleArgoment name="msg"/>			<Code>sendRefuse@FIPARequestParticipantTask</Code>		</Method>		<Method name="sendInform" type="void">			<HandleArgoment name="msg"/>			<Code>sendInform@FIPARequestParticipantTask</Code>		</Method>	</Task>	<PlatformConstraint platform="FIPAOS" target="owner-agent">		<Task name="FIPARequestParticipantTask">			<TaskSetup>				<Code>setup@FIPARequestParticipantTask</Code>			</TaskSetup>		</Task>		<Task name="IdleTask">			<Method name="handleRequestIf" type="void">				<HandleArgoment name="msg"/>				<Code>handleRequestIf@FIPARequestParticipantTask</Code>			</Method>			<Method name="handleRequestRef" type="void">				<HandleArgoment name="msg"/>				<Code>handleRequestRef@FIPARequestParticipantTask</Code>			</Method>		</Task>	</PlatformConstraint>	<PlatformConstraint platform="FIPAOS" target="model">		<Relation label="FIPARequestParticipantTask001" start="owner-agent.IdleTask.handleRequestIf" end="owner-agent.FIPARequestParticipantTask.FIPARequestParticipantTask"/>		<Relation label="FIPARequestParticipantTask002" start="owner-agent.IdleTask.handleRequestRef" end="owner-agent.FIPARequestParticipantTask.FIPARequestParticipantTask"/>	</PlatformConstraint>	<PlatformConstraint platform="Jade" target="owner-agent">		<Task name="FIPARequestParticipantTask">			<ExtendsTaskShell>AchieveREResponder</ExtendsTaskShell>			<Method name="setMessageTemplate" type="void">				<Argoment name="temp" type="MessageTemplate"/>				<Code>setMessageTemplate@FIPARequestParticipantTask</Code>			</Method>			<Method name="prepareResponse" type="ACLMessage">				<HandleArgoment name="request"/>				<Code>prepareResponse@FIPARequestParticipantTask</Code>			</Method>			<Method name="prepareResultNotification" type="ACLMessage">				<HandleArgoment name="request"/>				<HandleArgoment name="response"/>				<Code>prepareResultNotification@FIPARequestParticipantTask</Code>			</Method>		</Task>	</PlatformConstraint></Pattern>