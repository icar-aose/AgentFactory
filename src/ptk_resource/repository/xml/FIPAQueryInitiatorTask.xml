<Pattern name="FIPAQueryInitiatorTask">	<Information>		<Author>Luca Sabatucci</Author>		<Version>0.9</Version>		<Description>This pattern can be used to add an agent the ability to start a FIPA Query communication.</Description>	</Information>	<Task name="FIPAQueryInitiatorTask">		<AgentId name="agent_to_query"></AgentId>		<Attribute type="String" name="query_content">			<Visibility>private</Visibility>		</Attribute>		<TaskConstructor name="FIPAQueryInitiatorTask">			<AgentIdArgoment name="id"/>			<Argoment type="String" name="content"/>			<Code>constructor@FIPAQueryInitiatorTask</Code>		</TaskConstructor>		<Method name="handleAgree" type="void">			<HandleArgoment name="msg"/>			<Code>handleAgree@FIPAQueryInitiatorTask</Code>		</Method>		<Method name="handleRefuse" type="void">			<HandleArgoment name="msg"/>			<Code>handleRefuse@FIPAQueryInitiatorTask</Code>		</Method>		<Method name="handleFailure" type="void">			<HandleArgoment name="msg"/>			<Code>handleFailure@FIPAQueryInitiatorTask</Code>		</Method>		<Method name="handleNotUnderstood" type="void">			<HandleArgoment name="msg"/>			<Code>handleNotUnderstood@FIPAQueryInitiatorTask</Code>		</Method>		<Method name="handleInform" type="void">			<HandleArgoment name="msg"/>			<Code>handleInform@FIPAQueryInitiatorTask</Code>		</Method>		<Method name="handleOutOfSequence" type="void">			<HandleArgoment name="msg"/>			<Code>handleOutOfSequence@FIPAQueryInitiatorTask</Code>		</Method>	</Task>	<PlatformConstraint platform="FIPAOS" target="owner-agent">		<Task name="FIPAQueryInitiatorTask">			<TaskConstructor name="FIPAQueryInitiatorTask">				<AgentIdArgoment name="id"/>				<Code>constructor@FIPAQueryInitiatorTask</Code>			</TaskConstructor>			<TaskSetup>				<Code>setup@FIPAQueryInitiatorTask</Code>			</TaskSetup>			<Method name="sendRequest" type="void">				<Code>sendRequest@FIPAQueryInitiatorTask</Code>			</Method>		</Task>	</PlatformConstraint>	<PlatformConstraint platform="Jade" target="owner-agent">		<Task name="FIPAQueryInitiatorTask">			<ExtendsTaskShell>AchieveREInitiator</ExtendsTaskShell>			<Method name="handleAllResponses" type="void">				<Argoment type="Vector" name="allResponses"/>				<Code>AllResponses@FIPAQueryInitiatorTask</Code>			</Method>			<Method name="handleAllResultNotifications" type="void">				<Argoment type="Vector" name="allResultNotifications"/>				<Code>AllResultNotifications@FIPAQueryInitiatorTask</Code>			</Method>			<Method name="prepareRequests" type="Vector">				<HandleArgoment name="msg"/>				<Code>prepareRequests@FIPAQueryInitiatorTask</Code>			</Method>		</Task>	</PlatformConstraint>	<PlatformConstraint platform="Jade" target="model">		<Relation label="FIPAQueryInitiatorTask0001" start="owner-agent.FIPAQueryInitiatorTask.FIPAQueryInitiatorTask" end="owner-agent.FIPAQueryInitiatorTask.action"/>	</PlatformConstraint>	<PlatformConstraint platform="FIPAOS" target="model">		<Relation label="FIPAQueryInitiatorTask0001" start="owner-agent.FIPAQueryInitiatorTask.FIPAQueryInitiatorTask" end="owner-agent.FIPAQueryInitiatorTask.startTask"/>	</PlatformConstraint></Pattern>