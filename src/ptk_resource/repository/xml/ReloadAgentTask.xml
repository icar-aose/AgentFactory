<Pattern name="ReloadAgentTask">	<Information>		<Author>Danilo Candela</Author>		<Version>0.1</Version>		<Description>This pattern can be used to add an agent the ability to reload itself</Description>	</Information>	<Task name="ReloadAgentTask">		<ExtendsTaskShell>OneShotBehaviour</ExtendsTaskShell>		<TaskConstructor name="ReloadAgentTask">			<Code>constructor@Task</Code>		</TaskConstructor>				<TaskSetup/>		<Method name="action" type="void">			<Code>action@ReloadAgentTask</Code>		</Method>	</Task></Pattern>