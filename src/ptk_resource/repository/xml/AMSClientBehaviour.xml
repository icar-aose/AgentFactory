<Pattern name="AMSClientBehaviour">	<Information>		<Author>Danilo Candela</Author>		<Version>0.1</Version>		<Description>			This pattern can be used to add an agent the ability to request actions to AMS.		</Description>	</Information>	<Task name="AMSClientBehaviour">		<ExtendsTaskShell>SimpleAchieveREInitiator</ExtendsTaskShell>		<Attribute type="String" name="actionName">			<Visibility>private</Visibility>		</Attribute>		<TaskConstructor name="AMSClientBehaviour">			<Argoment type="String" name="action"/>			<Argoment type="ACLMessage" name="request"/>			<Code>constructor@AMSClientBehaviour</Code>		</TaskConstructor>		<Method name="handleAgree" type="void">			<HandleArgoment name="reply"/>			<Code>handleAgree@AMSClientBehaviour</Code>		</Method>		<Method name="handleRefuse" type="void">			<HandleArgoment name="reply"/>			<Code>handleRefuse@AMSClientBehaviour</Code>		</Method>		<Method name="handleFailure" type="void">			<HandleArgoment name="reply"/>			<Code>handleFailure@AMSClientBehaviour</Code>		</Method>		<Method name="handleNotUnderstood" type="void">			<HandleArgoment name="reply"/>			<Code>handleNotUnderstood@AMSClientBehaviour</Code>		</Method>		<Method name="handleInform" type="void">			<HandleArgoment name="reply"/>			<Code>handleInform@AMSClientBehaviour</Code>		</Method>	</Task></Pattern>