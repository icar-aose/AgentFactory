<Pattern name="ResourceAgent">	<Information>		<Author>Luca Sabatucci</Author>		<Version>0.9</Version>		<Description>This component pattern describe an Agent that has a resource and it want to condivide it to the community.</Description>	</Information>	<Agent name="ResourceAgent" extends="GenericAgent">		<Attribute name="data" type="UserDefinedType">			<Visibility>private</Visibility>		</Attribute>		<AgentSetup>			<Code>setup@ResourceAgent</Code>		</AgentSetup>		<Method name="getData" type="UserDefinedType">			<Visibility>public</Visibility>			<Modifier>synchronized</Modifier>			<Code>getData@ResourceAgent</Code>		</Method>		<Method name="setData" type="void">			<Visibility>public</Visibility>			<Modifier>synchronized</Modifier>			<Argoment name="a_data" type="UserDefinedType"/>			<Code>setData@ResourceAgent</Code>		</Method>		<Task name="Listener" extends="FIPARequestParticipantTask">		</Task>	</Agent>	<PlatformConstraint platform="FIPAOS" target="ResourceAgent">		<Task name="Listener">			<TaskSetup>				<Code>startTask.ShareResource@ResourceAgent</Code>			</TaskSetup>		</Task>	</PlatformConstraint>	<PlatformConstraint platform="Jade" target="ResourceAgent">		<Task name="Listener">			<ExtendsTaskShell>AchieveREResponder</ExtendsTaskShell>			<Method name="prepareResponse" type="ACLMessage">				<Code>prepareResponse@ResourceAgent</Code>			</Method>			<Method name="prepareResultNotification" type="ACLMessage">				<Code>prepareResultNotification@ResourceAgent</Code>			</Method>		</Task>	</PlatformConstraint>	<PlatformConstraint platform="Jade" target="model">		<Relation label="ta0001" start="ResourceAgent.setup" end="ResourceAgent.ShareResource.ShareResource"/>	</PlatformConstraint>	<PlatformConstraint platform="FIPAOS" target="model">		<Relation label="ta0002" start="ResourceAgent.ShareResource.ShareResource" end="ResourceAgent.ShareResource.startTask"/>	</PlatformConstraint></Pattern>