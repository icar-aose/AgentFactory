<Pattern name="DeleteAgentTask">	<Information>		<Author>Danilo Candela</Author>		<Version>0.1</Version>		<Description>This pattern can be used to add an agent the ability to delete a previous saved snapshot of itself</Description>	</Information>	<Task name="DeleteAgentTask">		<ExtendsTaskShell>OneShotBehaviour</ExtendsTaskShell>		<TaskConstructor name="DeleteAgentTask">			<Code>constructor@Task</Code>		</TaskConstructor>				<TaskSetup/>		<Method name="action" type="void">			<Code>action@DeleteAgentTask</Code>		</Method>		<Method name="getRequest" type="ACLMessage">			<Code>getRequest@AMSClientBehaviour</Code>		</Method>	</Task>	<Task name="MyAMSClientBehaviour" extends ="AMSClientBehaviour"/></Pattern>