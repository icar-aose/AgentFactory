<Pattern name="Memento">	<Information>		<Author>Danilo Candela</Author>		<Version>0.1</Version>		<Description>This pattern give to an agent main persistence abilities</Description>	</Information>	<Agent name="Memento">		<Attribute type="String" name="AGENT_NAME">			<Visibility>private</Visibility>			<Modifier>static</Modifier>			<Modifier>final</Modifier>			<Value>"HERE_specify_the_agent_name"</Value>		</Attribute>		<Attribute type="boolean" name="cloneForPersistence">			<Visibility>private</Visibility>			<Value>false</Value>		</Attribute>		<Attribute type="boolean" name="storyActivated">			<Visibility>private</Visibility>			<Value>false</Value>		</Attribute>		<Attribute type="Behaviour" name="killer">			<Visibility>private</Visibility>		</Attribute>		<AgentConstructor name="PersistentAgent">			<Code>constructor@PersistentAgent</Code>		</AgentConstructor>		<AgentSetup>			<Modifier>final</Modifier>			<Code>setup@Memento</Code>		</AgentSetup>		<Task name="SaveBehaviour">			<ExtendsTaskShell>OneShotBehaviour</ExtendsTaskShell>			<Attribute type="boolean" name="killAfterSave">				<Visibility>private</Visibility>				<Value>false</Value>			</Attribute>			<TaskConstructor name="SaveBehaviour">				<Argoment type="boolean" name="kill"/>				<Code>constructor@SaveBehaviour</Code>			</TaskConstructor>			<Method name="action" type="void">				<Code>action@SaveBehaviour</Code>			</Method>		</Task>		<Task name="ReloadBehaviour" extends="ReloadAgentTask"/>		<Task name="LoadBehaviour">			<ExtendsTaskShell>OneShotBehaviour</ExtendsTaskShell>			<Attribute type="String" name="targetAgent">				<Visibility>private</Visibility>			</Attribute>			<Attribute type="boolean" name="killAfterLoad">				<Visibility>private</Visibility>				<Value>false</Value>			</Attribute>			<TaskConstructor name="LoadBehaviour">				<Argoment type="final String" name="agent"/>				<Argoment type="boolean" name="kill"/>				<Code>constructor@LoadBehaviour</Code>			</TaskConstructor>			<Method name="action" type="void">				<Code>action@LoadBehaviour</Code>			</Method>		</Task>		<Task name="FreezeBehaviour" extends="FreezeAgentTask"/>		<Task name="MyAMSClientBehaviour" extends="AMSClientBehaviour">			<Attribute type="boolean" name="killAfterAction">				<Visibility>private</Visibility>				<Value>false</Value>			</Attribute>			<Method name="MyAMSClientBehaviour">				<Argoment type="boolean" name="kill"/>				<Code>constructor@MyAMSClientBehaviour</Code>			</Method>			<Method name="handleInform" type="void">				<HandleArgoment name="reply"/>				<Code>handleInform@MyAMSClientBehaviour</Code>			</Method>		</Task>		<Task name="PersistenceCloneMySelf" extends="OneShotTask">			<Attribute type="String" name="cloneName"/>			<Method name="action" type="void">				<Code>action@PersistenceCloneMySelf</Code>			</Method>			<Method name="onStart" type="void">				<Code>onStart@PersistenceCloneMySelf</Code>			</Method>		</Task>		<Task name="WaitingForParentDead">			<ExtendsTaskShell>TickerBehaviour</ExtendsTaskShell>			<Attribute type="jade.domain.FIPAAgentManagement.AMSAgentDescription" name="descr">				<Visibility>private</Visibility>				<Value>new jade.domain.FIPAAgentManagement.AMSAgentDescription()</Value>			</Attribute>			<TaskConstructor name="WaitingForParentDead">				<Code>constructor@WaitingForParentDead</Code>			</TaskConstructor>			<Method name="onTick" type="void">				<Code>onTick@WaitingForParentDead</Code>			</Method>		</Task>		<Task name="PersistenceCloneToParent" extends="OneShotTask">			<Method name="action" type="void">				<Code>action@PersistenceCloneToParent</Code>			</Method>			<Method name="onStart" type="void">				<Code>onStart@PersistenceCloneToParent</Code>			</Method>		</Task>		<Task name="MyDate">			<ExtendsTaskShell>Object</ExtendsTaskShell>			<Visibility>private</Visibility>			<Modifier>static</Modifier>			<Method name="getDay" type="int">				<Argoment type="final String" name="date"/>				<Modifier>static</Modifier>				<Code>getDay@MyDate</Code>			</Method>			<Method name="getMounth" type="int">				<Argoment type="final String" name="date"/>				<Modifier>static</Modifier>				<Code>getMounth@MyDate</Code>			</Method>			<Method name="getYear" type="int">				<Argoment type="final String" name="date"/>				<Modifier>static</Modifier>				<Code>getYear@MyDate</Code>			</Method>			<Method name="getHours" type="int">				<Argoment type="final String" name="date"/>				<Modifier>static</Modifier>				<Code>getHours@MyDate</Code>			</Method>			<Method name="getMins" type="int">				<Argoment type="final String" name="date"/>				<Modifier>static</Modifier>				<Code>getMins@MyDate</Code>			</Method>			<Method name="getSec" type="int">				<Argoment type="final String" name="date"/>				<Modifier>static</Modifier>				<Code>getSec@MyDate</Code>			</Method>		</Task>		<Method name="persistentSetup" type="void">			<Code>persistentSetup@PersistentAgent</Code>		</Method>		<Method name="init" type="void">			<Visibility>private</Visibility>			<Code>init@PersistentAgent</Code>		</Method>		<Method name="setSaveMode" type="void">			<Argoment type="boolean" name="flag"/>			<Code>setSaveMode@PersistentAgent</Code>		</Method>		<Method name="getSaveMode" type="boolean">			<Code>getSaveMode@PersistentAgent</Code>		</Method>		<Method name="saveAgent" type="void">			<Code>saveAgent@Memento</Code>		</Method>		<Method name="reloadAgent" type="void">			<Code>reloadAgent@Memento</Code>		</Method>		<Method name="reloadSnapshot" type="void">			<Argoment type="final String" name="snapshotName"/>			<Code>reloadSnapshot@Memento</Code>		</Method>		<Method name="deleteAgent" type="void">			<Code>deleteAgent@Memento</Code>		</Method>		<Method name="freezeAgent" type="void">			<Code>freezeAgent@PersistentAgent</Code>		</Method>		<Method name="thawAgent" type="void">			<Code>thawAgent@Memento</Code>		</Method>		<Method name="beforeSave" type="void">			<Code>beforeSave@PersistentAgent</Code>		</Method>		<Method name="afterLoad" type="void">			<Modifier>final</Modifier>			<Code>afterLoad@Memento</Code>		</Method>		<Method name="beforeReload" type="void">			<Code>beforeReload@PersistentAgent</Code>		</Method>		<Method name="afterReload" type="void">			<Code>afterReload@PersistentAgent</Code>		</Method>		<Method name="persistentAfterLoad" type="void">			<Code>persistentAfterLoad@PersistentAgent</Code>		</Method>		<Method name="beforeFreeze" type="void">			<Code>beforeFreeze@PersistentAgent</Code>		</Method>		<Method name="afterThaw" type="void">			<Modifier>final</Modifier>			<Code>afterThaw@PersistentAgent</Code>		</Method>		<Method name="persistentAfterThaw" type="void">			<Code>persistentAfterThaw@PersistentAgent</Code>		</Method>		<Method name="getSavedAgents" type="String[]">			<Visibility>private</Visibility>			<Code>getSavedAgents@PersistentAgent</Code>		</Method>		<Method name="getSavedSnapshots" type="List">			<Code>getSavedSnapshots@PersistentAgent</Code>		</Method>		<Method name="afterClone" type="void">			<Modifier>final</Modifier>			<Code>afterClone@Memento</Code>		</Method>		<Method name="persistentAfterClone" type="void">			<Code>persistentAfterClone@Memento</Code>		</Method>		<Method name="getRequest" type="ACLMessage">			<Code>getRequest@Memento</Code>		</Method>	</Agent></Pattern>