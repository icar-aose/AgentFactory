<Pattern name="GenericLogAgent">	<Information>		<Author>Luca Sabatucci</Author>		<Version>1.0</Version>		<Description>This pattern give to an agent the ability to register itself to a specific platform. The Agent has the ability to keep trace of its activities in a log.</Description>	</Information>	<Agent name="GenericLogAgent">		<Attribute type="String" name="AGENT_NAME">			<Visibility>private</Visibility>			<Modifier>static</Modifier>			<Modifier>final</Modifier>			<Value>"HERE_specify_the_agent_name"</Value>		</Attribute>		<Attribute type="Logger" name="logger">			<Visibility>private</Visibility>			<Modifier>final</Modifier>			<Value>Logger.getLogger(this.getClass())</Value>		</Attribute>		<Attribute type="Level" name="log_level">			<Visibility>private</Visibility>			<Modifier>final</Modifier>			<Value>Level.INFO</Value>		</Attribute>				<AgentConstructor name="GenericLogAgent">			<Code>constructor@GenericLogAgent</Code>		</AgentConstructor>		<AgentSetup>			<Code>AgentSetup@GenericAgent</Code>		</AgentSetup>		<Method name="register_to_df" type="void">			<Visibility>private</Visibility>			<Code>register_to_df@GenericAgent</Code>		</Method>		<Method name="takeDown" type="void">			<Visibility>protected</Visibility>			<Code>take_down@GenericLogAgent</Code>		</Method>	</Agent>	<PlatformConstraint platform="FIPAOS" target="GenericLogAgent">		<Method name="register_to_ams" type="void">			<Code>register_to_ams@GenericAgent</Code>		</Method>		<Method name="shutdown" type="void">			<Code>shutdown@GenericAgent</Code>		</Method>		<Task name="IdleTask">			<ExtendsTaskShell/>			<TaskConstructor name="IdleTask">				<Visibility>public</Visibility>			</TaskConstructor>			<TaskSetup>				<Code>setup.IdleTask@GenericAgent</Code>			</TaskSetup>		</Task>	</PlatformConstraint>	<PlatformConstraint platform="ALL" target="model">		<Relation label="GenericLogAgent0001" start="GenericLogAgent.GenericLogAgent" end="GenericLogAgent.setup"/>		<Relation label="GenericLogAgent0004" start="GenericLogAgent.setup" end="GenericLogAgent.register_to_df"/>	</PlatformConstraint>	<PlatformConstraint platform="FIPAOS" target="model">		<Relation label="GenericLogAgent0002" start="GenericLogAgent.setup" end="GenericLogAgent.IdleTask.IdleTask"/>		<Relation label="GenericLogAgent0003" start="GenericLogAgent.IdleTask.IdleTask" end="GenericLogAgent.IdleTask.startTask"/>	</PlatformConstraint></Pattern>