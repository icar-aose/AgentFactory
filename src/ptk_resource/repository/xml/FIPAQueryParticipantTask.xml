<Pattern name="FIPAQueryParticipantTask">	<Information>		<Author>Luca Sabatucci</Author>		<Version>0.9</Version>		<Description>This pattern can be used to add an agent the ability to participate a FIPA Query communication.</Description>	</Information>	<Task name="FIPAQueryParticipantTask">		<TaskConstructor name="FIPAQueryParticipantTask">			<Code>constructor@FIPAQueryParticipantTask</Code>		</TaskConstructor>		<Method name="sendAgree" type="void">			<HandleArgoment name="msg"/>			<Code>sendAgree@FIPAQueryParticipantTask</Code>		</Method>		<Method name="sendNotUnderstood" type="void">			<HandleArgoment name="msg"/>			<Code>sendNotUnderstood@FIPAQueryParticipantTask</Code>		</Method>		<Method name="sendRefuse" type="void">			<HandleArgoment name="msg"/>			<Code>sendRefuse@FIPAQueryParticipantTask</Code>		</Method>		<Method name="sendInform" type="void">			<HandleArgoment name="msg"/>			<Code>sendInform@FIPAQueryParticipantTask</Code>		</Method>	</Task>	<PlatformConstraint platform="FIPAOS" target="owner-agent">		<Task name="FIPAQueryParticipantTask">			<TaskSetup>				<Code>setup@FIPAQueryParticipantTask</Code>			</TaskSetup>		</Task>		<Task name="IdleTask">			<Method name="handleQueryIf" type="void">				<HandleArgoment name="msg"/>				<Code>handleQueryIf@FIPAQueryParticipantTask</Code>			</Method>			<Method name="handleQueryRef" type="void">				<HandleArgoment name="msg"/>				<Code>handleQueryRef@FIPAQueryParticipantTask</Code>			</Method>		</Task>	</PlatformConstraint>	<PlatformConstraint platform="FIPAOS" target="model">		<Relation label="FIPAQueryParticipantTask001" start="owner-agent.IdleTask.handleQueryIf" end="owner-agent.FIPAQueryParticipantTask.FIPAQueryParticipantTask"/>		<Relation label="FIPAQueryParticipantTask002" start="owner-agent.IdleTask.handleQueryRef" end="owner-agent.FIPAQueryParticipantTask.FIPAQueryParticipantTask"/>	</PlatformConstraint>	<PlatformConstraint platform="Jade" target="owner-agent">		<Task name="FIPAQueryParticipantTask">			<ExtendsTaskShell>AchieveREResponder</ExtendsTaskShell>			<Method name="setMessageTemplate" type="void">				<Argoment name="temp" type="MessageTemplate"/>				<Code>setMessageTemplate@FIPAQueryParticipantTask</Code>			</Method>			<Method name="prepareResponse" type="ACLMessage">				<HandleArgoment name="request"/>				<Code>prepareResponse@FIPAQueryParticipantTask</Code>			</Method>			<Method name="prepareResultNotification" type="ACLMessage">				<HandleArgoment name="request"/>				<HandleArgoment name="response"/>				<Code>prepareResultNotification@FIPAQueryParticipantTask</Code>			</Method>		</Task>	</PlatformConstraint></Pattern>