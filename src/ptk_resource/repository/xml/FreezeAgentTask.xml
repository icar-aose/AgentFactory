<Pattern name="FreezeAgentTask">	<Information>		<Author>Danilo Candela</Author>		<Version>0.1</Version>		<Description>This pattern can be used to add an agent the ability to freeze itself</Description>	</Information>	<Task name="FreezeAgentTask">		<ExtendsTaskShell>OneShotBehaviour</ExtendsTaskShell>		<TaskConstructor name="FreezeAgentTask">			<Code>constructor@Task</Code>		</TaskConstructor>				<TaskSetup/>		<Method name="action" type="void">			<Code>action@FreezeAgentTask</Code>		</Method>	</Task></Pattern>